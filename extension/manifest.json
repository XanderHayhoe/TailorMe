{
  "manifest_version": 3,
  "name": "TailorMe",
  "version": "0.1",
  "description": "Tailor your resume automatically to job postings",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
